<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True"
	xmlns:local="clr-namespace:EnaxisDevonApp.Views;assembly=EnaxisDevonApp"
    x:Class="EnaxisDevonApp.Views.Login"
    Title="Login">



	  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
          <Label Text="Login" VerticalOptions="Center" HorizontalOptions="Center" />
		          <Button Text="Request Access" Command="{Binding Path=NavigateCommand}" CommandParameter="RequestAccess" />
          <Button Text="Home" Command="{Binding Path=NavigateAbsoluteCommand}" CommandParameter="/Home/NavigationPage/Contacts" />
	  </StackLayout>
    

</ContentPage>

